solvers
{
    p
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        mergeLevels     1;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
        directSolveCoarse false;
        agglomerator    faceAreaPair;
        nCellsInCoarsestLevel 256;
        tolerance       1e-6;
        relTol          0.01;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }

    UFinal
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nCorrectors         1;
    nOuterCorrectors    50;

    residualControl
    {
        U
        {
                tolerance  5e-3;
                relTol      0;
        }
        p
        {
                tolerance  5e-3;
                relTol      0;
        }
     }
}

relaxationFactors
{
    fields
    {
        p      0.3;
        pFinal   1;
    }
    equations
